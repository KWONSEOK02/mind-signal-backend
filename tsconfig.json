{
    "compilerOptions": {
      "target": "ES2022",           /* Node 20 환경에 맞춰 최신 문법 지원 */
      "module": "CommonJS",         /* Node.js 백엔드 표준 모듈 시스템 */
      "moduleResolution": "Node",   /* Node.js 방식의 패키지 탐색 */
      "baseUrl": "src",               /* 프로젝트 루트를 기준으로 경로 탐색 */
      "paths": {
        "@01-app/*": ["01-app/*"],
        "@02-processes/*": ["02-processes/*"],
        "@03-pages/*": ["03-pages/*"],
        "@04-widgets/*": ["04-widgets/*"],
        "@05-features/*": ["05-features/*"],
        "@06-entities/*": ["06-entities/*"],
        "@07-shared/*": ["07-shared/*"],          /* FSD 레이어에 자유롭게 접근하기 위한 별칭 */
      },
      "rootDir": "src",             /* 실제 소스 코드가 위치한 곳 */
      "outDir": "dist",             /* 빌드 결과물(JavaScript)이 저장될 폴더 */
      "resolveJsonModule": true,      /*JSON 파일 임포트 허용 */
      "esModuleInterop": true,      /* import/require 호환성 해결 (Express 등 사용 시 필수) */
      "forceConsistentCasingInFileNames": true, /* 구글 표준: 파일명 대소문자 엄격 구분 */
      "strict": true,               /* 엄격한 타입 검사로 런타임 에러 방지 */
      "skipLibCheck": true,         /* 외부 라이브러리 타입 검사 생략 (빌드 속도 향상) */
      "sourceMap": true             /* 디버깅 시 TS 코드를 추적 가능하게 함 */
    },
    "include": ["src/**/*", "eslint.config.mjs"],        /* src 폴더 내 모든 파일 포함 */
    "exclude": ["node_modules", "dist", "**/*.test.ts"] /* 불필요한 폴더 및 테스트 파일 제외 */
  }